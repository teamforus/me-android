<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/button_qr_background"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_horizontal">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/qr_click"
        android:layout_centerInParent="true"
        android:background="@drawable/button_qr_raund"
        android:drawableStart="@drawable/ic_qr_image_2"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:text="@string/voucher_button_show_qr"
        android:textColor="@color/forus_blue"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

</RelativeLayout>
