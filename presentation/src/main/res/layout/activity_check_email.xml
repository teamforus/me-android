<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            />


    </RelativeLayout>



    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="@string/check_email_has_been_sent_to_you"
        android:gravity="center_horizontal|top"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"
        android:textSize="32sp"
        android:textColor="@color/textColor"
        android:fontFamily="sans-serif-medium"
        />


    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_email_img"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        />



    <RelativeLayout
        android:id="@+id/rl_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:text="@string/check_email_description"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal|top"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            />

        <io.forus.me.android.presentation.view.component.buttons.Button
            android:id="@+id/checkEmailBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:layout_below="@id/description"
            android:text="@string/check_email_open_mail_app" />

        <io.forus.me.android.presentation.view.component.buttons.ButtonWhite
            android:id="@+id/cancelBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkEmailBt"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:text="@string/cancel" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>